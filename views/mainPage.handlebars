<div class="clicker">
    <div class="wood">
        <img id="wood-button" src="/benny.png">
        <p id="wood-title">Wood: 0</p>
    </div>

    <div class="button-store">
        <div class="axe">
            <img class="button-image" src="/axe.png">
            <p id="axe-title">Buy Axe - 25</p>
            <p id="axe-counter">Axes: </p>
        </div>
        <div class="auto-axe">
            <img class="button-image" src="/axe.png">
            <p id="auto-axe-title">Buy Auto Axe - 50</p>
            <p id="auto-axe-counter">Auto Axes: </p>
        </div>
        <div class="chainsaw">
            <img class="button-image" src="/chainsaw.png">
            <p id="chainsaw-title">Buy Chainsaw - 75</p>
            <p id="chainsaw-counter">Chainsaws: </p>
        </div>
        <div class="auto-chainsaw">
            <img class="button-image" src="/chainsaw.png">
            <p id="auto-chainsaw-title">Buy Auto Chainsaw - 150</p>
            <p id="auto-chainsaw-counter">Auto Chainsaws: </p>
        </div>
        <div class="flame-thrower">
            <img class="button-image" src="/flame.png">
            <p id="flame-thrower-title">Buy Flame Thrower - 125</p>
            <p id="flamethrower-counter">Flame throwers: </p>
        </div>
        <div class="auto-flame-thrower">
            <img class="button-image" src="/flame.png">
            <p id="auto-flame-thrower-title">Buy Auto Flame Thrower - 375</p>
            <p id="auto-flamethrower-counter">Auto Flame throwers: </p>
        </div>
    </div>

</div>
<div id="store">
    <h1 class="store-title">Store</h1>
    <div class="posts">
        {{#each postData}}
            {{> post price=price source=photoURL itemDescription=description}}
        {{/each}}
    </div>
</div>